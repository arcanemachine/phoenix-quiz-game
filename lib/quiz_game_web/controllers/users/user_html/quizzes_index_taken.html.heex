<div :if={Enum.empty?(@quizzes)} class="text-center italic">
  You have not taken any quizzes.
</div>

<ul class="list-index">
  <li :for={quiz <- @quizzes}>
    <a href={route(:quizzes, :show, quiz_id: quiz.id)}>
      <%= quiz.name %>
    </a>
  </li>
</ul>

<.action_links>
  <.action_links_item>
    <.link href={route(:users, :quizzes_index)}>
      View your quizzes
    </.link>
  </.action_links_item>
  <.action_links_item>
    <.link href={route(:quizzes, :index)}>
      View all quizzes
    </.link>
  </.action_links_item>
  <.action_links_spacer />
  <.action_links_item kind="back">
    <.link href={route(:users, :show)}>
      Return to your profile
    </.link>
  </.action_links_item>
</.action_links>
