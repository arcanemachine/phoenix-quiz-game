<ul class="record-index">
  <li :for={quiz <- @quizzes}>
    <a href={route("quizzes", :show, quiz_id: quiz.id)}>
      <%= quiz.name %>
    </a>
  </li>
</ul>

<.action_links>
  <.action_links_item>
    <.link href={route("quizzes", :new)}>
      Create new quiz
    </.link>
  </.action_links_item>
  <.action_links_item>
    <.link href={route("base", :root)}>
      Return to homepage
    </.link>
  </.action_links_item>
</.action_links>
